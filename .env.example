# ===============================
# 🔐 OpenAI API 설정
# ===============================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_IMAGE_MODEL=dall-e-3        # or gpt-image-1
OPENAI_IMAGE_SIZE=1024x1024        # e.g. 512x512, 1024x1024

# ===============================
# ☁️ AWS S3 스토리지 설정
# ===============================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name_here
AWS_S3_REGION_NAME=ap-northeast-2  # e.g. us-east-1, ap-northeast-2

# ===============================
# 🗂️ Django 파일 스토리지 백엔드
# ===============================
DEFAULT_FILE_STORAGE=storages.backends.s3.S3Storage
